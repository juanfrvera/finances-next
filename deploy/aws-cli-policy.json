{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "cloudformation:*",
                "lambda:*",
                "apigateway:*",
                "cloudfront:*",
                "s3:*",
                "iam:*",
                "logs:*",
                "ecr:*",
                "ssm:GetParameter",
                "ssm:PutParameter",
                "ssm:DeleteParameter",
                "route53:*",
                "acm:*"
            ],
            "Resource": "*"
        }
    ]
}